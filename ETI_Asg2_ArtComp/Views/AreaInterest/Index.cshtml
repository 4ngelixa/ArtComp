@model IEnumerable<Web_Asg.Models.AreaInterest>

@{
    ViewData["Title"] = "ViewAreaInterest";
}
@{
    var data = ViewBag;
}
<h1 class="mb-2">View Area Interest</h1>

<a class="btn btn-primary mb-4" asp-action="Create">Create New Area Of Interest</a>
@if (Model.ToList().Count > 0)
{
    <div class="table-responsive">
        <table id="viewStaff" class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th>Name</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="AreaInterest"
                           asp-route-id="@item.AreaInterestID">Delete</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
}
else
{
    <span style="color:red">No record found!</span>
}
